---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Counters from "../components/Counters.astro";
import CardsSection from "../components/CardsSection.astro";

---

<Layout
 title=" agency for building ."
>
    <main
        class="w-full min-h-[70vh] overflow-hidden lg:min-h-[90vh] justify-start items-center flex flex-col relative"
    >
        <div class="w-full h-[70vh] lg:min-h-[90vh] absolute left-0 top-0 -z-[1]">
            <Image
                width={1920}
                height={1080}
                src="/hero.webp"
                class="object-cover w-full h-full"
                alt=""
                srcset=""
            />
        </div>
        <span
        class="w-full h-[70vh] lg:min-h-[90vh] absolute left-0 top-0 backdrop-blur-sm z-[1] bg-white/10"
        >

        </span>        
        <div
            class="flex flex-col md:px-0 px-3 z-10 justify-start items-start gap-6 max-w-7xl mt-52"
        >
            <h2
            id="hero-title"
            class=" text-3xl lg:text-5xl text-white capitalize"
            >
                Logiciels de Gestion Commerciale, Comptabilité et Bâtiment
                Conformes aux Normes Marocaines
            </h2>
            <p
            id="hero-description"
            class=" text-slate-100 text-sm md:text-xl max-w-4xl"
            >
                EBP Maroc, votre partenaire de confiance pour des logiciels : de
                gestion commerciale, comptabilité et bâtiment, conformes aux
                normes marocaines. Simplifiez et optimisez la gestion de votre
                entreprise avec nos solutions innovantes, spécialement conçues
                pour répondre aux besoins des entreprises marocaines.
            </p>

            <button
            id="hero-button"
            class="bg-primary group text-sm  hover:outline outline-primary/80 outline-offset-2  lg:text-base text-slate-100 px-6 py-3 flex gap-2 justify-center items-center rounded-full"
            >
                Découvrir nos solutions

                <svg
                class=" group-hover:ml-2 group-hover:-rotate-45 transition-all ease-in-out duration-500"
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"  fill="none">
                    <path d="M20.0001 11.9998L4.00012 11.9998" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M15.0003 17C15.0003 17 20.0002 13.3176 20.0002 12C20.0002 10.6824 15.0002 7 15.0002 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </button>
        </div>
    </main>
    <Counters/>
    <CardsSection/>
    <div class="w-full max-w-7xl relative flex justify-center items-center min-h-96 bg-white">
        <section class="text-center relative max-w-4xl">
            <div class="font-nycd text-xl text-primary mb-4">
                <span class="relative inline-flex">
                    <span>Our promise</span>
                    <svg class="fill-primary absolute bottom-0" xmlns="http://www.w3.org/2000/svg" width="132" height="4">
                        <path fill-opacity=".4" fill-rule="evenodd" d="M131.014 2.344s-39.52 1.318-64.973 1.593c-25.456.24-65.013-.282-65.013-.282C-.34 3.623-.332 1.732.987 1.656c0 0 39.52-1.32 64.973-1.593 25.455-.24 65.012.282 65.012.282 1.356.184 1.37 1.86.042 1.999" />
                    </svg>
                </span>
            </div>
            <div class=" text-2xl lg:text-4xl leading-tight font-bold text-slate-900">
                <span class="[&:has(~.active)]:opacity-25 [&.active~*]:opacity-25 transition-opacity duration-200">We'll help you boost your revenues</span>
                <div
                    class="[&:has(~.active)]:opacity-25 [&.active~*]:opacity-25 transition-opacity duration-200 relative inline-flex justify-center w-[52px] h-[52px] align-middle -translate-y-1 z-50"
                    x-data="{ open: false }"
                    :class="{ 'active': open }"
                    @mouseover.outside="open = false"
                    @focusout="await $nextTick();!$el.contains($focus.focused()) && (open = false)"
                >
                    <button
                        class="size-14 focus-visible:outline-none focus-visible:ring focus-visible:ring-primary/50 rounded-full overflow-hidden rotate-[4deg] transition duration-200 ease-[cubic-bezier(.5,.85,.25,1.8)] delay-100"
                        :class="{ 'rotate-0': open }"
                        aria-labelledby="avatars/avatar-2"
                        @mouseover="open = true"
                        @focus="open = true"
